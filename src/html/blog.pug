extends template/main

block variables
	- var title = '';
	- var description = '';
	- var keywords = 'SeoWave Studio';
	- var author = '';
	- var pageClass = 'page-template-blog';

block content

	section.section-blog
		.section-blog__header
			.container
				h2.section-blog__title Блог
		.section-blog__body
			.container
				.blog-list
					.blog-list__wrapper

						mixin blog-unit()
							artice.blog-unit
								.blog-unit__wrapper
									a.blog-unit__link(href="#")
										.blog-unit__image
											.blog-unit__image-bg(style="background-image: url('images/img.jpg');")
												svg.blog-unit__placeholder(width="249" height="158" viewBox="0 0 249 158" xmlns="http://www.w3.org/2000/svg")
													rect(x="0" y="0" width="249" height="158" rx="3" ry="3" fill="#e1e1e1")
										.blog-unit__content
											.blog-unit__info
												//- .blog-unit__meta meta
												.blog-unit__tag Article
												//- .blog-unit__date 10.01.2020
												.blog-unit__title Эксклюзивные аппаратные методики омоложения Guinot (Франция)

						+blog-unit()
						+blog-unit()
						+blog-unit()
						+blog-unit()
						+blog-unit()
						+blog-unit()

					.blog-list__pagination
						<nav class="navigation pagination" role="navigation">
							<h2 class="screen-reader-text">Навигация по записям</h2>
							<div class="nav-links">
