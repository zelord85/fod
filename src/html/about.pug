									<path d="M31.3536 4.35355C31.5488 4.15829 31.5488 3.84171 31.3536 3.64645L28.1716 0.464466C27.9763 0.269204 27.6597 0.269204 27.4645 0.464466C27.2692 0.659728 27.2692 0.976311 27.4645 1.17157L30.2929 4L27.4645 6.82843C27.2692 7.02369 27.2692 7.34027 27.4645 7.53553C27.6597 7.7308 27.9763 7.7308 28.1716 7.53553L31.3536 4.35355ZM0 4.5H31V3.5H0V4.5Z" fill="black"/>
								</svg>


	section.section-team
		.section-team__header
			.container
				h2.team__title Команда
		.section-team__body
			.container
				.team-list

					mixin team-card()
						article.team-card
							.team-card__inner
								.team-card__avatar
									img.team-card__image(src="images/homepage-technology.jpg")
									a.team-card__link read more
								.team-card__content
									h3.team-card__title It ain’t witchcraft. But we’re tech wizards.

									.team-card__desc
										p Passion is the heart of our craft, technology its living soul. Take advantage of our exposure to, and intimate knowledge of, the world’s leading technologies—across all platforms.

					+team-card()
					+team-card()
					+team-card()
					+team-card()
					+team-card()
					+team-card()


	include template/patrials/section-map